<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dark">

    <TextView
        android:id="@+id/tv_what_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="어떤 테마가 \n마음에 드시나요?"
        android:textColor="@color/Gray_100"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_hobby"
        android:layout_width="204dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_what_title"
        app:srcCompat="@drawable/onboarding_hobby" />

    <ImageView
        android:id="@+id/btn_love"
        android:layout_width="200dp"
        android:layout_height="112dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="-5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_hobby"
        app:srcCompat="@drawable/onboarding_love" />

    <ImageView
        android:id="@+id/btn_fan"
        android:layout_width="204dp"
        android:layout_height="138dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_love"
        app:layout_constraintTop_toBottomOf="@+id/btn_hobby"
        app:srcCompat="@drawable/onboarding_fan" />

    <ImageView
        android:id="@+id/btn_selfcare"
        android:layout_width="230dp"
        android:layout_height="113dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_love"
        app:srcCompat="@drawable/onboarding_selfcare" />

    <ImageView
        android:id="@+id/btn_diet"
        android:layout_width="177dp"
        android:layout_height="131dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_selfcare"
        app:layout_constraintTop_toBottomOf="@+id/btn_fan"
        app:srcCompat="@drawable/onboarding_diet" />

    <ImageView
        android:id="@+id/btn_study"
        android:layout_width="220dp"
        android:layout_height="168dp"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_selfcare"
        app:srcCompat="@drawable/onboarding_study" />

    <ImageView
        android:id="@+id/btn_fitness"
        android:layout_width="196dp"
        android:layout_height="124dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_study"
        app:layout_constraintTop_toBottomOf="@+id/btn_diet"
        app:srcCompat="@drawable/onboarding_fitness" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_fitness"
        android:background="@color/Gray_800">

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="다음"
            android:textAlignment="center"
            android:textColor="@color/Gray_700"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>