<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/explore_edit"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/explore"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/explore"
                app:srcCompat="@drawable/explore_edit_2x" />

            <TextView
                android:id="@+id/explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/blatant_bold"
                android:text="explore"
                android:textAllCaps="true"
                android:textColor="@color/THIRTY_BLACK"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/explore_care"
                android:layout_width="0dp"
                android:layout_height="188dp"
                android:layout_marginBottom="3dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/explore_love"
                app:layout_constraintEnd_toEndOf="@+id/explore_fan"
                app:layout_constraintTop_toTopOf="@+id/explore_love"
                app:srcCompat="@drawable/explore_care" />

            <ImageButton
                android:id="@+id/explore_hobby"
                android:layout_width="0dp"
                android:layout_height="210dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="4dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toStartOf="@+id/explore_fan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/explore"
                app:srcCompat="@drawable/explore_hobby" />

            <ImageButton
                android:id="@+id/explore_fan"
                android:layout_width="0dp"
                android:layout_height="211dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="-1dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/explore_hobby"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.479"
                app:layout_constraintStart_toEndOf="@+id/explore_hobby"
                app:layout_constraintTop_toTopOf="@+id/explore_hobby"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/explore_fan" />

            <ImageButton
                android:id="@+id/explore_love"
                android:layout_width="0dp"
                android:layout_height="191dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="-15dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toStartOf="@+id/explore_care"
                app:layout_constraintStart_toStartOf="@+id/explore_hobby"
                app:layout_constraintTop_toBottomOf="@+id/explore_fan"
                app:srcCompat="@drawable/explore_love" />

            <ImageButton
                android:id="@+id/explore_diet"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="@id/explore_love"
                app:layout_constraintTop_toBottomOf="@+id/explore_care"
                app:srcCompat="@drawable/explore_diet" />

            <ImageButton
                android:id="@+id/explore_fitness"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/explore_diet"
                app:layout_constraintEnd_toEndOf="@+id/explore_care"
                app:layout_constraintStart_toEndOf="@+id/explore_diet"
                app:layout_constraintTop_toTopOf="@+id/explore_diet"
                app:srcCompat="@drawable/explore_fitness" />

            <ImageButton
                android:id="@+id/explore_study"
                android:layout_width="0dp"
                android:layout_height="144dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/explore_fitness"
                app:layout_constraintStart_toStartOf="@+id/explore_diet"
                app:layout_constraintTop_toBottomOf="@+id/explore_diet"
                app:srcCompat="@drawable/explore_study" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>